{
  "compilerOptions": {
    "target": "es6",
    "jsx": "react",
    "module": "commonjs",
    "lib": [
      "dom",
      "es2017"
    ],

    "allowJs": true,
    "checkJs": false,

    "strict": true,
    "noUnusedLocals": true,

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "noEmit": true,
    "isolatedModules": true
  },
  "typeAcquisition": {
    "enable": false
  },
  "exclude": [
    "**/node_modules/*",
    "**/dist/*"
  ]
}
